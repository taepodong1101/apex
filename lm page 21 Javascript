<script language="JavaScript" type="text/javascript">
	/* After discount is updated */
	function calcTotalPayable()
	{
		tp = $v('P21_TOTAL_COST');
		disc = $v('P21_TOTAL_DISCOUNT');
		bal = tp - disc;
		if(!isNaN(disc) && bal >= 0)
		{
			$x('P21_TOTAL_PAYABLE').value = bal;
		}
	}
</script>

