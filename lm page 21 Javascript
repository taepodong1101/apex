<script language="JavaScript" type="text/javascript">

function setColor(pThis)
{
	var vv = $v(pThis);
	var cls = '#'+pThis;
	
	if(isNaN(vv))
	{	
		$(cls).css("background-color","red");
	}
	else
	{
		$(cls).css("background-color","white");
	}
}


</script>



